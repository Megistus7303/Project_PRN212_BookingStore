<Window x:Class="Project_PRN212.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Detail" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding BookName}" FontSize="20" Margin="10"/>
            <Image Source="{Binding Image1}" Width="100" Height="100" Margin="10"/>
            <TextBlock Text="{Binding Genre.GenreName}" Margin="10"/>
            <TextBlock Text="{Binding Author.AuthorName}" Margin="10"/>
            <TextBlock Text="{Binding PriceInput, StringFormat=C}" Margin="10"/>
            <TextBlock Text="{Binding PriceOutput, StringFormat=C}" Margin="10"/>
            <TextBlock Text="{Binding Detailbook}" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
